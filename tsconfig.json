{
    "compilerOptions": {
        "target": "es2017",
        "module": "nodenext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "*"
            ]
        }
    },
    "include": [
        ".eslintrc.cjs",
        "./src/**/*",
        "./test/**/*",
        "jest.config.mjs"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
